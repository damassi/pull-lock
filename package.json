{
  "name": "pull-lock",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "author": "Orta Therox & Xtina-starr",
  "license": "MIT",
  "bin": {
    "pull-lock": "./build/index.js"
  },
  "devDependencies": {
    "@types/cosmiconfig": "^5.0.3",
    "@types/jest": "^24.0.6",
    "@types/node": "^11.9.5",
    "danger": "^7.0.14",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-cli": "^24.1.0",
    "lint-staged": "^8.1.4",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.0",
    "typescript": "^3.3.3333"
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "lint": "tslint 'src/**/*.{ts,tsx}'",
    "integrate:pull": "yarn build; rm -rf tmp/project/ tmp/second; sh example/run-script-pull.sh",
    "integrate:merge": "yarn build; rm -rf tmp/project/ tmp/second; sh example/run-script-merge.sh"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "tslint --fix",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(.test)\\.(ts|tsx)$"
  },
  "dependencies": {
    "cosmiconfig": "^5.1.0",
    "debug": "^4.1.1",
    "execa": "^1.0.0"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "proseWrap": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run build",
      "post-merge": "npm run build; node ./build/index.js"
    }
  },
  "pull-lock": {
    "yarn.lock": "yarn install"
  }
}
